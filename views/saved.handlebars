<div id="wrapper">
    {{#each articles}} {{#if this.saved}}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="artDiv">
            <h2> {{ this.title}} </h2>
            <br>

            <br>
            <p>{{ this.summary}}</p>
            <br>

            <br>
            <p>{{this.link}}</p>
            <br>
            <a href='/saved'>
                <button type="button" class="btn btn-danger" data-id={{this._id}} id="delete" saved={{this.saved}}>Delete From Saved</button>
            </a>
            <button type="button" class="btn btn-info" id='artNote' data-id={{this._id}}> View Article Note </button>
            <br>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="notes{{this._id}}">
                </div>
            </div>
        </div>
    </div>
    {{/if}} {{/each}}
</div>